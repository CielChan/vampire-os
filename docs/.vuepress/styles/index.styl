.sidebar-heading {
  font-weight: unset!important;
}
.content:not(.custom) {
  padding-right: 20%!important;
}
ul.sidebar-links > li > a {
  font-size: 1.1em!important;
}
.page-edit, .page-nav {
  padding-right: 20%!important;
}

.content *:not(pre)>code {
  color: #94381C!important;
  font-family: Consolas, "Source Code Pro", Menlo, Monaco, "微软雅黑", "Courier New", monospace
}

*:not(pre)>code {
  white-space: nowrap
}

section[type] {
  background-color: #f5f5f5;
  border-radius: 4px;
  font-size: 1rem;
  padding: 1.2em 1.5em 0.4em;
  margin: 0.6rem auto;
  border-style: solid;
  border-width: 0 0 0 4px;
  & > p:nth-child(2) {
    margin-top: 0.2rem!important;
  }
  &[type='exercise'] {
    border-color: #23d160;
    color: #0e301a
  }
  &[type='challenge'] {
    border-color: #ffdd57;
    color: #3b3108;
  }
  &[type='question'] {
    border-color: #3273dc;
    color: #22509a;
  }
  &[type='warning'] {
    border-color: #00d1b2;
    color: #3b3108;
  }
}
